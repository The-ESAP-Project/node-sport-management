# 服务配置
PORT=3001
NODE_ENV=development

# API配置
API_PREFIX=/api/v1

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fitness_system
DB_USER=postgres
DB_PASSWORD=password
DB_DIALECT=postgres

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=86400
JWT_REFRESH_EXPIRES_IN=604800
JWT_AUDIENCE=fitness-system
JWT_ISSUER=fitness-system-api

# 默认管理员配置
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123456

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,application/vnd.ms-excel

# 系统配置
UPLOAD_DEADLINE=2024-12-31T23:59:59Z
CURRENT_YEAR=2024

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS配置
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# 限流配置
RATE_LIMIT_MAX=1000
