# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=spm
DB_USER=root
DB_PASSWORD=root
DB_DIALECT=mysql
DB_LOGGING=false

# 数据库连接池配置
DB_POOL_MAX=3
DB_POOL_MIN=1
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# 默认管理员账号配置
# ⚠️ 重要：生产环境请务必修改这些默认值！
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=Admin123!
DEFAULT_ADMIN_NAME=系统管理员

# 应用配置
NODE_ENV=development
API_BASE_ROUTE=/api
NEED_INIT=false

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# 服务器配置
PORT=8012

